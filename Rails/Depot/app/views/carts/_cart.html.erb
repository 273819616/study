<h2>Your Cart</h2>
<table>
  <tr>
    <td>Quantity</td>
    <td>Product Name</td>
    <td>Price</td>
  </tr>
  <% render(cart.line_items) %>
  <tr>
    <td></td>
    <td>Total Price:</td>
    <td><%= number_to_currency(cart.total_price) %></td>
  </tr>
</table>

<%= button_to 'Empty cart', cart, method: :delete, :confirm => 'Are you sure?' %>