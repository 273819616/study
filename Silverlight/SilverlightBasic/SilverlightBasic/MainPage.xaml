<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    mc:Ignorable="d" xmlns:layoutToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Layout.Toolkit" xmlns:dataInput="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data.Input" x:Class="SilverlightApplication1.MainPage"
    d:DesignWidth="640" d:DesignHeight="480">
	<Canvas>
        <Canvas.Resources>
            <Style x:Key="LoginHeaderFontStyle" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Arial"></Setter>
                <Setter Property="FontSize" Value="14"></Setter>
            </Style>
        </Canvas.Resources>
        <TextBox Canvas.Left="99" Canvas.Top="23" TextWrapping="Wrap" Width="149"/>
		<TextBlock Canvas.Left="34" Canvas.Top="27" TextWrapping="Wrap" Height="14" Style="{StaticResource LoginHeaderFontStyle}">Username:</TextBlock>
		<TextBlock Canvas.Left="36" Canvas.Top="72" Text="Password:" TextWrapping="Wrap" Style="{StaticResource LoginHeaderFontStyle}"/>
		<TextBox Canvas.Left="99" Canvas.Top="68" TextWrapping="Wrap" Width="149"/>
		<Button Width="75" Content="Login" Canvas.Left="173" Canvas.Top="123"/>
	</Canvas>
</UserControl>
